<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.flexpoint.atividade1.PrincipalActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iptPrice1"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:width="@dimen/activity_horizontal_margin"
        style="@style/Base.V7.Widget.AppCompat.EditText"
        android:layout_toStartOf="@+id/textView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iptMl1"
        android:width="@dimen/activity_horizontal_margin"
        style="@style/Base.V7.Widget.AppCompat.EditText"
        android:layout_alignTop="@+id/iptPrice1"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/iptPrice1"
        android:layout_alignStart="@+id/textView4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iptPrice2"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:width="@dimen/activity_horizontal_margin"
        android:layout_toStartOf="@+id/textView5"
        style="@style/Base.V7.Widget.AppCompat.EditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iptMl2"
        android:width="@dimen/activity_horizontal_margin"
        style="@style/Base.V7.Widget.AppCompat.EditText"
        android:layout_alignTop="@+id/iptPrice2"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:id="@+id/btnCalculate"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/iptPrice2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="R$"
        android:id="@+id/textView"
        android:layout_above="@+id/iptMl1"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ML"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/textView"
        android:layout_alignStart="@+id/iptMl1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="R$"
        android:id="@+id/textView3"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ML"
        android:id="@+id/textView4"
        android:layout_above="@+id/iptMl2"
        android:layout_alignStart="@+id/iptMl2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="X"
        android:id="@+id/textView5"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/iptMl1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1ª Opção"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="2ª Opção"
        android:id="@+id/textView7"
        android:layout_above="@+id/textView3"
        android:layout_alignParentStart="true" />

</RelativeLayout>
